<!DOCTYPE html>
<html lang="en">
    <head>
        <title  >BAN2</title>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="./style.css">
	    
        <script src="https://kit.fontawesome.com/9da116f39f.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <%- include('../partials/header.ejs') %>

        <% if (errorMessage) { %>
            <div class="container" style="color: red;">
                <div class="header">
                    <h4> <%= errorMessage %></h4>
                </div>
            </div>
        <% } %>

        <div class="container">
            <div class="header">
                <h2>Criar conta</h2>
            </div>

            <form id="form" class="form" action="/cadastro" method="post">
                <div class="form-control">
                    <label for="username">Nome de usuÃ¡rio</label>
                    <input type="text" id="username" name="username">
                    <i class="fas fa-exclamation-circle"></i>
                    <i class="fas fa-check-circle"></i>
                    <small>Mensagem de erro</small>
                </div>

                <div class="form-control">
                    <label for="cpf">CPF</label>
                    <input type="text" id="cpf" name="cpf">
                    <i class="fas fa-exclamation-circle"></i>
                    <i class="fas fa-check-circle"></i>
                    <small>Mensagem de erro</small>
                </div>

                <div class="form-control">
                    <label for="telephone">Telefone</label>
                    <input type="text" id="telephone" name="telephone">
                    <i class="fas fa-exclamation-circle"></i>
                    <i class="fas fa-check-circle"></i>
                    <small>Mensagem de erro</small>
                </div>

                <div class="form-control">
                    <label for="adress">Endereco</label>
                    <input type="text" id="adress" name="adress">
                    <i class="fas fa-exclamation-circle"></i>
                    <i class="fas fa-check-circle"></i>
                    <small>Mensagem de erro</small>
                </div>

                <div class="form-control">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email">
                    <i class="fas fa-exclamation-circle"></i>
                    <i class="fas fa-check-circle"></i>
                    <small>Mensagem de erro</small>
                </div>

                <div class="form-control">
                    <label for="password">Senha</label>
                    <input type="password" id="password" name="password">
                    <i class="fas fa-exclamation-circle"></i>
                    <i class="fas fa-check-circle"></i>
                    <small>Mensagem de erro</small>
                </div>

                <div class="form-control">
                    <label for="password-confirmation">Confirme a senha</label>
                    <input type="password" id="password-confirmation" name="passwordConfirmation">
                    <i class="fas fa-exclamation-circle"></i>
                    <i class="fas fa-check-circle"></i>
                    <small>Mensagem de erro</small>
                </div>

                <button type="submit">Cadastrar</button>
            </form>
        </div>
        
        <script src="./cadastro.js"></script> 
        <%- include('../partials/footer.ejs') %>
    </body>
</html>
