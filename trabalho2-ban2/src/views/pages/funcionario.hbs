<main class="main-hotel">
    {{> error}}
    <form id="form" class="form" action="funcionario" method="post">
        <div class="form-control">
            <label for="nome">Nome do funcionário</label>
            <input type="text" id="nome" name="nome">
            <i class="fas fa-exclamation-circle"></i>
            <i class="fas fa-check-circle"></i>
            <small>Mensagem de erro</small>
        </div>

        <div class="form-control">
            <label for="hotel">Hotel</label>
            <select name="hotel" id="hotel">
                {{#each hoteis as |hotel index|}}
                    <option value="{{hotel._id}}">
                        {{hotel.nome}}
                    </option>
                {{/each}}
            </select>
        </div>

        <div class="form-control">
            <label for="funcao">Função</label>
            <input type="text" id="funcao" name="funcao">
            <i class="fas fa-exclamation-circle"></i>
            <i class="fas fa-check-circle"></i>
            <small>Mensagem de erro</small>
        </div>
        <div class="form-control">
            <label for="funcao">E-mail</label>
            <input type="text" id="funcao" name="email">
            <i class="fas fa-exclamation-circle"></i>
            <i class="fas fa-check-circle"></i>
            <small>Mensagem de erro</small>
        </div>
        <div class="form-control">
            <label for="funcao">Senha</label>
            <input type="password" id="funcao" name="senha">
            <i class="fas fa-exclamation-circle"></i>
            <i class="fas fa-check-circle"></i>
            <small>Mensagem de erro</small>
        </div>
        <div class="form-control">
            <label for="funcao">Confirmar senha</label>
            <input type="password" id="funcao" name="senha_confirmar">
            <i class="fas fa-exclamation-circle"></i>
            <i class="fas fa-check-circle"></i>
            <small>Mensagem de erro</small>
        </div>

        <button type="submit">Cadastrar novo Funcionário</button>
    </form>
    {{#each funcionarios as |funcionario index1|}}
    <div class="container">
        <div class="header">
            <h3>
                <form id="form-{{funcionario._id}}" class="form" action="funcionario/demitir" method="post">
                    <input type="hidden" id="cod_funcionario" name="_id" value="{{funcionario._id}}">
                    {{funcionario.nome}}<br>
                    Funções: 
                    {{#each funcionario.funcao as |f index2|}}
                        {{f}},
                    {{/each}}
                    <br>
                    Hotel: {{funcionario.hotel_id.nome}}
                    <button>Demitir</button>
                </form>
            </h3>
        </div>
    </div>
    {{/each}}
</main>

<script type="text/javascript">
    function demitirFuncionario(codigo)
</script>